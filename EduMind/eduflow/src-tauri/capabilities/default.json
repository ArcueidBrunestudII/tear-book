{
  "identifier": "main",
  "description": "Main window capability: core IPC + open external links + window management.",
  "windows": ["*"],
  "permissions": [
    "core:default",
    "core:window:allow-create",
    "core:window:allow-close",
    "core:window:allow-destroy",
    "core:window:allow-set-focus",
    "core:window:allow-set-title",
    "core:window:allow-show",
    "core:window:allow-hide",
    "core:webview:allow-create-webview",
    "core:webview:allow-create-webview-window",
    "shell:default",
    "fs:allow-read",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    "fs:allow-write",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    {
      "identifier": "fs:scope",
      "allow": [
        "$DOCUMENT/**",
        "$DOWNLOAD/**",
        "$APPDATA/**",
        "$LOCALAPPDATA/**",
        "$DESKTOP/**"
      ],
      "deny": [
        "$HOME/.ssh/**",
        "$HOME/.gnupg/**",
        "$HOME/.config/**",
        "**/.env",
        "**/*.pem",
        "**/*.key"
      ]
    }
  ]
}
